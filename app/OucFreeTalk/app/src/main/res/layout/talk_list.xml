<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_head"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/people_icon"
                android:src="@drawable/nav_icon"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/airtcle_title"
                    android:textSize="20sp"
                    android:text="这是一个简洁好用的标题"
                    android:maxLines="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/airticle_tag"
                    android:layout_marginTop="10dp"
                    android:text="#这是一个标签"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recy_head">
            <ImageView
                android:id="@+id/isImgset"
                android:src="@drawable/apple"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/airtcle_content"
                android:textSize="15sp"
                android:maxLines="3"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_bubble"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"/>
            <ImageView
                android:layout_width="10dp"
                android:src="@drawable/thumbs_up"
                android:layout_height="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="800"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>