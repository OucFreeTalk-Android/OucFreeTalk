<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:id="@+id/header"
    android:padding="10dp"
    android:background="@drawable/person_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_icon" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/head_description"
        android:text=""
        android:textColor="#929191"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/attention"
        android:orientation="horizontal"
        android:layout_above="@id/head_description"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/head_MeFocus"
            android:layout_height="wrap_content"
            android:text="300"
            android:textColor="#929191"
            android:textSize="14sp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:id="@+id/head_FocusMe"
            android:textColor="#929191"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/attention"
        android:layout_centerHorizontal="true"
        android:textColor="#333"
        android:text="用户名"
        android:textSize="14sp"
        android:id="@+id/nvhead_username"/>
</RelativeLayout>